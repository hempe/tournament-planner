{
    "name": "hempe/tournament-planner",
    "description": "Golf tournament planning and registration system",
    "type": "project",
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "TP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TP\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:integration": "phpunit --testsuite integration",
        "test:coverage": "php -d pcov.enabled=1 vendor/bin/phpunit --coverage-text",
        "test:coverage-html": "php -d pcov.enabled=1 vendor/bin/phpunit --coverage-html coverage"
    }
}
